// Page Content
.grid-container.grid-container-padded#user
  .grid-x.grid-padding-x
    .cell.small-3
      include contentsidebar.pug
    .cell.small-9
      .people-you-might-know
        if data
          each ami in data
            if ami.status == 1
              .row.add-people-section.grid-x
                .small-12.medium-6.columns.about-people.cell
                  a(href= '/user/'+ami.infoami[0].username)
                    .about-people-avatar
                      if ami.infoami[0]
                        img.avatar-image(src= ami.infoami[0].photodeprofil.path, alt= ami.username)
                      else
                        img.avatar-image(src='https://i.imgur.com/UPVxPjb.jpg', alt= ami.username)
                    .about-people-author
                      p.author-name= ami.infoami[0].username
                      p.author-location
                        i.fa.fa-map-marker(aria-hidden='true')
                        span= ami.infoami[0].location
                .small-12.medium-6.columns.add-friend
                  .label.warning
                    p Invitation en cours
            else if ami.status == 2
              .row.add-people-section.grid-x
                .small-12.medium-6.columns.about-people.cell
                  .about-people-avatar
                    if ami.infoami[0].photodeprofil
                      a(href= '/user/'+ami.infoami[0].username)
                        img.avatar-image(src= ami.infoami[0].photodeprofil.path, alt= ami.username)
                    else
                      a(href= '/user/'+ami.infoami[0].username)
                        img.avatar-image(src='https://i.imgur.com/UPVxPjb.jpg', alt= ami.username)
                  .about-people-author
                    p.author-name= ami.infoami[0].username
                    p.author-location
                      i.fa.fa-map-marker(aria-hidden='true')
                        span= ami.infoami[0].location
                .small-12.medium-6.columns.add-friend
                  .add-friend-action
                    a(href= '/ignorerami/'+ami.infoami[0].username)
                      button.button.alert.small
                        i.fa.fa-user-times(aria-hidden='true')
                        |           Supprimer de ma liste
                  .add-friend-action
                    a.recommander
                      button.button.success.small(data-open='exampleModal1' data-user= ami.infoami[0].username) 
                        i.fa.fa-user-plus(aria-hidden='true')
                        |           Recommander un ami
        else
         p.label-notification Pas d'amis dans votre liste
      .people-you-might-know
        if demandeur
          each ami in demandeur
            if ami.username != usernamesession
              if ami.status == 1
                .row.add-people-section.grid-x
                  .small-12.medium-4.columns.about-people.cell
                    .about-people-avatar
                      if ami.demandeur[0].photodeprofil
                        img.avatar-image(src= ami.demandeur[0].photodeprofil.path, alt= ami.username)
                      else
                        img.avatar-image(src='https://i.imgur.com/UPVxPjb.jpg', alt= ami.username)
                    .about-people-author
                      p.author-name= ami.demandeur[0].username
                      p.author-location
                        i.fa.fa-map-marker(aria-hidden='true')
                        span= ami.demandeur[0].location
                  .small-12.medium-4.columns.add-friend
                    .label.warning
                      p En attente de confirmation
                  .small-12.medium-4.columns.add-friend
                    .add-friend-action
                      a(href= '/validerami/'+ami.demandeur[0].username)
                        button.button.primary.small
                          i.fa.fa-user-plus(aria-hidden='true')
                          |           Valider
                      a(href= '/ignorerami/'+ami.demandeur[0].username)
                        button.button.secondary.small
                          i.fa.fa-user-times(aria-hidden='true')
                          |           Ignorer
              else if ami.status == 2
                .row.add-people-section.grid-x
                  .small-12.medium-6.columns.about-people.cell
                    .about-people-avatar
                      if ami.demandeur[0].photodeprofil
                        img.avatar-image(src= ami.demandeur[0].photodeprofil.path, alt= ami.username)
                      else
                        img.avatar-image(src='https://i.imgur.com/UPVxPjb.jpg', alt= ami.username)
                    .about-people-author
                      p.author-name= ami.demandeur[0].username
                      p.author-location
                        i.fa.fa-map-marker(aria-hidden='true')
                        span= ami.demandeur[0].location
                  .small-12.medium-6.columns.add-friend
                    .add-friend-action
                      a(href= '/ignorerami/'+ami.demandeur[0].username)
                        button.button.secondary.small
                          i.fa.fa-user-times(aria-hidden='true')
                          |           Supprimer de ma liste
                    .add-friend-action
                      a.recommander
                        button.button.success.small(data-open='exampleModal1', data-user= ami.demandeur[0].username) 
                          i.fa.fa-user-plus(aria-hidden='true')
                          |           Recommander un ami
        else
         p.label-notification Pas d'amis dans votre liste 
      .people-you-might-know
       if recommander
         each ami in recommander
           if ami.status == 1
             .row.add-people-section.grid-x
               .small-12.medium-4.columns.about-people.cell
                 .about-people-avatar
                   if ami.amirecommander[0].photodeprofil
                     img.avatar-image(src= ami.amirecommander[0].photodeprofil.path, alt= ami.amirecommander[0].username)
                   else
                     img.avatar-image(src='https://i.imgur.com/UPVxPjb.jpg', alt= ami.username)
                 .about-people-author
                   p.author-name= ami.amirecommander[0].username
                   p.author-location
                     i.fa.fa-map-marker(aria-hidden='true')
                     span= ami.amirecommander[0].location
               .small-12.medium-4.columns.add-friend
                 .label.success.small
                   p Recommander par 
                    span= ami.recommandeur
               .small-12.medium-4.columns.add-friend
                 a(href= '/accepterreco/'+ami.amirecommander[0].username)
                   button.button.primary.small
                     i.fa.fa-user-times(aria-hidden='true')
                     |           Accepter recommandation
                 a(href= '/ignorerecommandation/'+ami.amirecommander[0].username)
                   button.button.secondary.small(data-open='exampleModal1', data-user= ami.amirecommander[0].username) 
                     i.fa.fa-user-plus(aria-hidden='true')
                     |           Ignorer
             
