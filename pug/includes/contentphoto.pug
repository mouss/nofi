// Page Content
.grid-container.grid-container-padded#user
  .grid-x.grid-padding-x
    .cell.small-3 
      include contentsidebar.pug
    .cell.small-9 
      .people-you-might-know
        .add-people-header
          h1.header-title Photos
      .callout
        form(method='POST', action='/photos', enctype='multipart/form-data')
          input(type='file', name='gallery', multiple)
          input(type='submit', value='envoyer')
      if data
        each image in data
          a.thumbnail(href='#', data-featherlight= image.path)
            img(src= image.path)
      else
       p.label-notification= reponse
